---
export interface Props {
  title: string;
  description: string;
  href?: string;
  tags?: string[];
}
const { title, description, href, tags = [] } = Astro.props as Props;
---
<article class="card group">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-lg font-semibold tracking-tight">
      {href ? <a class="hover:text-brand-300" href={href} target="_blank" rel="noopener">{title}</a> : title}
    </h3>
    {href && (
      <a href={href} class="hidden rounded-md border border-white/10 px-2 py-1 text-xs text-zinc-300 group-hover:border-brand-400 group-hover:text-white md:inline-flex" target="_blank" rel="noopener">View</a>
    )}
  </div>
  <p class="mt-2 text-sm text-zinc-300">{description}</p>
  {tags.length > 0 && (
    <ul class="mt-3 flex flex-wrap gap-2">
      {tags.map((t) => <li class="rounded-md border border-white/10 px-2 py-1 text-xs text-zinc-300">{t}</li>)}
    </ul>
  )}
</article>

