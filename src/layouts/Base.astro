---
import "../styles/global.css";
const { title = 'Travantiv2 • Portfolio', description = 'Projects, skills, and contact' } = Astro.props;
---
<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#4f46e5" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style is:global>
      :root { 
        --bg: #0f0f23; 
        --storm-bg: linear-gradient(135deg, #0f0f23 0%, #1a1a3a 50%, #0f0f23 100%);
      }
      .storm-bg { 
        background: var(--storm-bg);
        background-image: 
          radial-gradient(circle at 20% 80%, rgba(124,106,255,0.15) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(237,116,32,0.12) 0%, transparent 50%),
          radial-gradient(circle at 40% 40%, rgba(245,158,11,0.08) 0%, transparent 50%),
          linear-gradient(180deg, transparent 0%, rgba(124,106,255,0.03) 100%);
      }
      .lightning-flash {
        animation: lightning 4s infinite;
      }
      @keyframes lightning {
        0%, 90%, 100% { opacity: 0; }
        91%, 92%, 93% { opacity: 0.8; }
        94%, 95% { opacity: 0; }
        96%, 97% { opacity: 1; }
      }
      .thunder-rumble {
        animation: rumble 6s infinite ease-in-out;
      }
      @keyframes rumble {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-1px); }
        50% { transform: translateX(1px); }
        75% { transform: translateX(-0.5px); }
      }
    </style>
  </head>
  <body class="min-h-full storm-bg text-zinc-100 antialiased selection:bg-storm-600/30">
    <!-- Lightning flash overlay -->
    <div class="lightning-flash fixed inset-0 z-50 pointer-events-none bg-gradient-to-br from-lightning-400/20 via-transparent to-lightning-300/10"></div>
    
    <header class="sticky top-0 z-40 border-b border-storm-700/30 backdrop-blur-md supports-[backdrop-filter]:bg-slate-900/20">
      <nav class="thunder-rumble mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a href="#" class="text-xl font-bold tracking-tight">
          <span class="lightning-glow">⚡</span>
          <span class="storm-text">Travantiv2</span>
        </a>
        <ul class="hidden gap-8 text-sm font-medium md:flex">
          <li><a href="#projects" class="transition-colors hover:text-lightning-300">Projects</a></li>
          <li><a href="#about" class="transition-colors hover:text-lightning-300">About</a></li>
          <li><a href="#contact" class="transition-colors hover:text-lightning-300">Contact</a></li>
        </ul>
        <a href="#contact" class="btn-primary text-sm font-semibold">
          <span>⚡</span>
          Get in touch
        </a>
      </nav>
    </header>

    <main class="relative">
      <slot />
    </main>

    <footer class="mt-20 border-t border-storm-700/30">
      <div class="mx-auto max-w-6xl px-6 py-12 text-sm text-storm-300">
        <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
          <p class="flex items-center gap-2">
            <span class="lightning-glow text-lg">⚡</span>
            &copy; {new Date().getFullYear()} Travantiv2. Powered by storms.
          </p>
          <div class="flex items-center gap-6">
            <a class="transition-colors hover:text-lightning-300" href="https://github.com/Travantiv2" target="_blank" rel="noopener">
              GitHub
            </a>
            <a class="transition-colors hover:text-lightning-300" href="#contact">Contact</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
